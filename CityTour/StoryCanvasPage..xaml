<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="CityTour.StoryCanvasPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Padding="16">

    <Grid RowDefinitions="Auto,Auto,* ,Auto" RowSpacing="12">

        <Label Text="New story"
               FontSize="22"
               FontAttributes="Bold" />

        <Label x:Name="BuildingNameLabel"
               Grid.Row="1"
               FontSize="14"
               TextColor="{AppThemeBinding Light=#666, Dark=#AAA}" />

        <Editor x:Name="StoryEditor"
                Grid.Row="2"
                Placeholder="Write the historical information here..."
                AutoSize="TextChanges" />

        <Button Grid.Row="3"
                Text="Close"
                Clicked="OnCloseClicked" />
    </Grid>
</ContentPage>
