<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CityTour.Views.DetailPage"
             Title="Details">
    <ScrollView>
        <VerticalStackLayout Padding="16" Spacing="12">
            <Label x:Name="NameLabel" FontSize="24" FontAttributes="Bold"/>
            <Label x:Name="AddressLabel" FontSize="14" TextColor="Gray"/>
            <Label x:Name="DescLabel" FontSize="16"/>
            <Button Text="Open in Maps" Clicked="OnOpenMapsClicked"
                    BackgroundColor="{StaticResource Accent}" TextColor="White"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
