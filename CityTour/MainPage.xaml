<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="CityTour.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:maps="clr-namespace:Microsoft.Maui.Controls.Maps;assembly=Microsoft.Maui.Controls.Maps">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Clear stories"
                     Clicked="OnClearStoriesClicked" />
    </ContentPage.ToolbarItems>

    <Grid RowDefinitions="Auto,Auto,*,Auto,Auto" Padding="12" RowSpacing="8">

        <!-- Search bar -->
        <SearchBar x:Name="Search"
                   Placeholder="Search addresses"
                   SearchButtonPressed="OnSearchButtonPressed"
                   TextChanged="OnSearchTextChanged" />

        <!-- Live suggestions list (appears while typing) -->
        <CollectionView x:Name="ResultsList"
                        Grid.Row="1"
                        HeightRequest="160"
                        IsVisible="False"
                        SelectionMode="Single"
                        SelectionChanged="OnSuggestionSelected">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="10" ColumnDefinitions="*">
                        <Label Text="{Binding PrimaryText}"
                               FontAttributes="Bold" />
                        <Label Text="{Binding SecondaryText}"
                               Grid.Row="1"
                               FontSize="12"
                               TextColor="{DynamicResource SecondaryTextColor}" />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Map -->
        <maps:Map x:Name="Map" Grid.Row="2" />

        <!-- Street view preview -->
        <VerticalStackLayout Grid.Row="3"
                             x:Name="StreetViewPanel"
                             Spacing="4"
                             IsVisible="False">
            <Label Text="Street view"
                   FontAttributes="Bold"
                   FontSize="14" />
            <Frame Padding="0"
                   HasShadow="False"
                   CornerRadius="12"
                   BackgroundColor="{AppThemeBinding Light=#F5F5F5, Dark=#1F1F1F}"
                   BorderColor="{AppThemeBinding Light=#E5E7EB, Dark=#3F3F46}">
                <Grid HeightRequest="200">
                    <WebView x:Name="StreetViewWebView"
                             HorizontalOptions="Fill"
                             VerticalOptions="Fill"
                             IsVisible="False" />
                    <Label x:Name="StreetViewStatusLabel"
                           Text="Search for a place or tap the map to preview Street View here."
                           HorizontalOptions="Center"
                           VerticalOptions="Center"
                           HorizontalTextAlignment="Center"
                           Margin="16,12"
                           TextColor="{AppThemeBinding Light=#6B7280, Dark=#D4D4D8}" />
                </Grid>
            </Frame>
        </VerticalStackLayout>

        <!-- Actions -->
        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Button
                x:Name="SelectBuildingBtn"
                Text="Select building"
                Clicked="OnSelectBuildingClicked"
                Grid.Column="0" />

            <Button
                Text="Recenter to Vienna"
                Clicked="OnRecenterClicked"
                Grid.Column="1" />

            <Button
                x:Name="StreetViewToggleButton"
                Text="Show street view"
                Clicked="OnStreetViewToggleClicked"
                Grid.Column="2" />
        </Grid>
    </Grid>
</ContentPage>
